<h2 class="ui center aligned icon header">
  <i class="circular orange power off icon"></i>
  Login
</h2>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_with(scope: :session, url: login_path,
            html: {class: "ui form", role: "form"} ) do |form| %>
          <div class="field">
            <label>Username</label>
            <div class="ui left icon input">
              <%= form.text_field :username %>
              <i class="user icon"></i>
            </div>
          </div>        
          <div class="field">
            <label>Password</label>
            <div class="ui left icon input">
               <%= form.password_field :password %>
               <i class="lock icon"></i>
            </div>
          </div>        
          <div>
            <%= form.submit "Login", class: "ui orange submit button" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
