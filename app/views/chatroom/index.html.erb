<h2 class="ui center aligned icon header">
  <i class="circular orange comments icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  
  <div class="ui twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with(scope: @message, url: message_path, local: false, 
            html: { class: "ui reply form", role: "form"} ) do |form| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= form.text_field :body, placeholder: "Enter a message" %>
              <%= form.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="ui four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical pointing menu">
          <%= link_to "Chatroom", root_path, class: "item" %>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  
</div>